<div class= "row">
  <h1><%= @title %></h1>
  <div class="col-md-3">
    <div class="user_info center">
      <%= gravatar_for @user %>
      <h3><%= @user.name %></h3>
      <span><%= link_to "view my profile", @user %></span>
    </div>
    <div class="stats center">
      <%= render "shared/stats" %>
    </div>
    <div class="user_avatar">
      <% if @users.any? %>
        <% @users.each do |user| %>
          <%= link_to gravatar_for(user), user %>
        <% end %>
      <% end %>
    </div>
  </div>

  <div class="col-md-8">
    <% if @users.any? %>
      <table class="table">
        <% @users.each do |user| %>
          <tr>
            <td>
              <div class="index_user">
                <strong>
                  <%= link_to user.name, user %>
                </strong>
                <span>Email: <%= user.email%></span>
              </div>
            </td>
          </tr>
        <% end %>
      </table>

      <%= will_paginate %>
    <% end %>
  </div>
</div>
